{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "treasure-chest",
  "version": "0.1.0",
  "identifier": "com.hrmsh.treasure-chest",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Treasure Chest",
        "width": 1440,
        "height": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "deb": {
        "files": {
          "/usr/share/applications/treasure-chest.desktop": "../desktop/treasure-chest.desktop"
        }
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": [
          "nxm"
        ]
      }
    }
  }
}